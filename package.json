{
  "name": "know-your-macros",
  "version": "0.0.0",
  "description": "An application which allows users to calculate their ideal meal to reach a desired macronutrient quantity goal",
  "repository": {
    "type": "git",
    "url": "git://github.com/lucas1richard/knowyourmacros.git"
  },
  "engines": {
    "npm": ">=8",
    "node": "16.x.x"
  },
  "author": "Richard Lucas",
  "license": "MIT",
  "scripts": {
    "start:dev": "NODE_ENV=development nodemon server",
    "start:test": "NODE_ENV=test nodemon server",
    "start": "npm run start:prod",
    "start:prod": "NODE_ENV=production node server",
    "lint": "eslint ./server",
    "lint:js": "npm run lint:eslint -- ./server ",
    "test:clean": "rimraf ./coverage",
    "jest": "NODE_ENV=test jest --runInBand --collectCoverage",
    "test": "NODE_ENV=test nyc mocha --timeout=4000 --recursive --exit",
    "test:update-snapshots": "UPDATE_SNAPSHOT=1 NODE_ENV=test nyc mocha --timeout=4000 --recursive --exit",
    "posttest": "npm run nyc-coverage",
    "nyc-coverage": "nyc report --reporter=html",
    "generate": "plop --plopfile internals/generators/index.js"
  },
  "nyc": {
    "all": true,
    "include": [
      "server/api/routes/programs"
    ]
  },
  "jest": {
    "setupFiles": [
      "./jest-setup.js"
    ],
    "testPathIgnorePatterns": [
      "./dist/.*",
      ".*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "dependencies": {
    "@kym/db": "file:../kym-db-api",
    "axios": "^0.18.0",
    "babel-eslint": "^10.1.0",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chalk": "2.4.1",
    "cors": "^2.8.4",
    "dotenv": "^6.1.0",
    "express": "4.16.3",
    "ip": "1.1.5",
    "joi": "^13.6.0",
    "jwt-simple": "^0.5.1",
    "minimist": "1.2.0",
    "moment": "^2.22.2",
    "passport": "^0.4.0",
    "passport-fitbit-oauth2": "^1.0.2",
    "passport-google-oauth": "^1.0.0",
    "pluralize": "^7.0.0",
    "raven": "^2.6.4",
    "redis": "^4.3.1",
    "supertest": "^3.3.0",
    "swagger-ui-express": "^4.0.1",
    "swipe-js-iso": "^2.0.4",
    "uuid": "^9.0.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "babel-polyfill": "^6.26.0",
    "enzyme": "3.3.0",
    "enzyme-to-json": "3.3.4",
    "eslint": "^8.23.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^28.1.3",
    "mocha": "^5.2.0",
    "mocha-chai-jest-snapshot": "^1.1.4",
    "nodemon": "^2.0.19",
    "nyc": "^15.1.0",
    "plop": "^3.1.1",
    "rimraf": "2.6.2",
    "sinon": "^7.5.0"
  }
}
